			<span>Contact Uploading & Non-Users</span>
		</div>
	</footer>
</Layout>

<style>
	.parent-input {
		transition-property: border, box-shadow;
		transition-duration: 300ms;
	}
	.parent-input:has(.input:focus) {
		border: 1px solid #0866FF;
		box-shadow: 0px 0px 0px 2px #E7F3FF;
	}
	.input:focus::placeholder {
		opacity: .6;
	}
</style>

<script>
		// Media
		import showIcon from '../../public/icons/visible.png';
		import hiddeIcon from '../../public/icons/hidden.png';

		// Focus email or phone input when page is loaded
		window.addEventListener('load', () => document.querySelector('input').focus())

		// Hide icon when password is empty and show if it have data
		const passElement = document.querySelector('#password') as HTMLInputElement;
		const passImg = document.querySelector('#passwordImg') as HTMLImageElement;
		passElement.addEventListener('input', (e)=>{
			const target = e.target as HTMLInputElement;
			if(target.value.length === 0) {
				passImg.classList.replace('opacity-100', 'opacity-0');
				passImg.classList.add('pointer-events-none');
			} else {
				passImg.classList.replace('opacity-0', 'opacity-100');
				passImg.classList.remove('pointer-events-none');
			}
		});
		// Toogle between text and password input type
		passImg.addEventListener('click', () => {
			if(passElement.type === 'text') {
				passElement.type = 'password';
				passImg.src = showIcon.src;
			} else {
				passElement.type = 'text';
				passImg.src = hiddeIcon.src;
			}
		});
</script>